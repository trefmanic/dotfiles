#!/bin/zsh

## Конфигурация PowerLevel10
## --------------------------------

# Перенос приглашения на новую строку
POWERLEVEL9K_PROMPT_ON_NEWLINE=true

# Символ приглашения пользователя
POWERLEVEL9K_MULTILINE_LAST_PROMPT_PREFIX="╰» "

# Добавление новой строки после команды
POWERLEVEL9K_PROMPT_ADD_NEWLINE=true

POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(context time dir)
POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(vcs virtualenv)

# Сокращение имени каталога
POWERLEVEL9K_SHORTEN_DIR_LENGTH=5
POWERLEVEL9K_SHORTEN_STRATEGY=truncate_from_right

POWERLEVEL9K_CONTEXT_ROOT_BACKGROUND="red"
POWERLEVEL9K_CONTEXT_ROOT_FOREGROUND="black"

POWERLEVEL9K_TIME_BACKGROUND="green"
POWERLEVEL9K_VIRTUALENV_BACKGROUND="green"

POWERLEVEL9K_PYTHON_ICON='ω'
POWERLEVEL9K_VCS_GIT_ICON=$'\u276E\u276E'

